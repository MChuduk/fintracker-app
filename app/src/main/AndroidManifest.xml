<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fintracker_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fintrackerapp"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".screens.wallets.WalletUpsertActivity"
            android:exported="false" />
        <activity
            android:name=".screens.base.ModelListActivity"
            android:exported="false" />
        <activity
            android:name=".screens.transaction_categories.TransactionCategoriesActivity"
            android:exported="false" />
        <activity
            android:name=".screens.wallets.WalletEditActivity"
            android:exported="false" />
        <activity
            android:name=".screens.wallets.WalletCreateActivity"
            android:exported="false" />
        <activity
            android:name=".screens.wallets.WalletsListActivity"
            android:exported="false" />
        <activity
            android:name=".screens.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".screens.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".screens.MainActivity"
            android:exported="true" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>